{
  "name": "Tianji",
  "version": "1.0.0",
  "slug": "tianji",
  "description": "Tianji monitoring platform as a Home Assistant add-on.",
  "arch": ["amd64", "arm64"],
  "url": "https://github.com/msgbyte/tianji",
  "startup": "services",
  "boot": "auto",
  "webui": "http://[HOST]:[PORT:8080]",
  "ingress": true,
  "ingress_port": 8080,
  "map": ["config"],
  "options": {
    "port": 8080
  },
  "schema": {
    "port": "int"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface"
  },
  "image": "msgbyte/tianji:latest"
}
